<link rel="stylesheet" href="/css/use.css">

<img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" width="100">

<div>
    <!-- <h2><%= profile_user.name %></h2>
    <h2><%= profile_user.email %></h2> -->

    <% if(profile_user.id==user.id) { %>
        <!-- if user matches then show form  -->
        <!-- this is bocz to see old details  -->
        <h2><%= profile_user.name %></h2>
        <h2><%= profile_user.email %></h2>
        <form action="/users/update/<%= profile_user.id %>" method="post" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>">
            <input type="email" name="email" placeholder="Your email" value="<%= profile_user.email %>">

            <input type="file" name="avatar" placeholder="Profile Picture">
            <input type="submit" value="Update">
        </form>
    <% } else {%>
        <h2><%= profile_user.name %></h2>
        <h2><%= profile_user.email %></h2>
    <%} %>
    
</div>

